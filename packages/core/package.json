{
  "name": "@rocket-climb/bolt-core",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json && tsconfig-replace-paths",
    "postbuild": "bolt-sh cp \"dist-esm/**/*.js\" \"dist/**/*.mjs\"",
    "clean": "bolt-sh rm -fR dist dist-esm && bolt-sh rm -fR *.tsbuildinfo",
    "clean:o": "bolt-sh rm -fR node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "rebuild": "npm run clean && npm run build",
    "test": "jest ./src",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "bolt-sh": "*"
  },
  "files": [
    "dist/"
  ]
}
