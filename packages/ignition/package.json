{
  "name": "ignition",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "prebuild": "npm run prebuild:cc && npm run prebuild:gs",
    "prebuild:cc": "test -z $SKIP_GENERATE_CONTENT_COLLECTIONS && npm run generate-content-collections || echo '[IGNITION] skip content collections generate'",
    "prebuild:gs": "test -z $SKIP_GENERATE_IGNITION_STATICS && npm run generate-statics || echo '[IGNITION] skip statics generate'",
    "build": "test -z $SKIP_IGNITION_BUILD && next build || echo '[IGNITION] skip build'",
    "predev": "npm run generate-content-collections && npm run generate-statics",
    "dev": "next dev",
    "predev:all-icons": "npm run generate-content-collections && npm run generate-statics:all-icons",
    "dev:all-icons": "NEXT_PUBLIC_VERCEL_ENV=develop next dev",
    "generate-statics": "npx ts-node -r tsconfig-paths/register ./src/statics-generator",
    "generate-content-collections": "rocketclimb-cc",
    "generate-statics:all-icons": "NEXT_PUBLIC_VERCEL_ENV=develop npm run generate-statics",
    "indexer": "npx ts-node -r tsconfig-paths/register ./src/algolia-indexer",
    "lint": "next lint",
    "format": "prettier --check src/* --write --ignore-path ../../.gitignore",
    "rebuild": "rm -fR .content-collections && next build",
    "start": "next start"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.1.4",
    "@next/third-parties": "^14.1.4",
    "@rocketclimb/code-block": "^0.0.3",
    "@rocketclimb/content-collections": "^0.1.3",
    "@shikijs/rehype": "1.3.0",
    "@vercel/analytics": "^1.2.2",
    "@vercel/edge-config": "^1.1.0",
    "@vercel/speed-insights": "^1.0.10",
    "algoliasearch": "^4.23.3",
    "change-case": "^5.4.4",
    "next": "14.1.4",
    "react": "~18.2",
    "react-dom": "~18.2",
    "react-instantsearch": "^7.7.2",
    "rehype-slug-custom-id": "^1.1.0",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "rocketicons": "*"
  },
  "devDependencies": {
    "@types/mdx": "^2.0.13",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.3"
  }
}
